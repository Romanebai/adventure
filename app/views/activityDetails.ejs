<%- include('header') %> 
<link rel="stylesheet" href="/css/activity-details.css">


      <div class="activity-card">
        <h1 class="activity-title"><%= activity.title %></h1>
        <p class="activity-description"><%= activity.description %></p>
          
        <img class="activity-img" src="<%= activity.image %>" alt="<%= activity.alt %>">
        
        <div class="product-tag">
          <% activity.tags.forEach(tag => { %>
            <span class="one-product-tag <%= 'tag-' + tag.toLowerCase() %>"><%= tag %></span>
          <% }) %>
        </div>

        <div class="activity-under-img">
          <h2 class="activity-opening_hours"><%= activity.opening_hours %></h2>
         <h2 class="activity-detailed_price"><%= activity.detailed_price %></h2>
         <h2 class="activity-address"><%= activity.address %></h2>
        </div>
        <h2 class="activity-website"><%= activity.website %></h2>  

          <h2 class="activity-city"><%= activity.city%></h2>
      </div>


 

  <%- include('footer') %>
